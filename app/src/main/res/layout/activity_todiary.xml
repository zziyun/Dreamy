<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TodiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar_todiary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/today_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="2019.XX.XX (요일)"
                android:textSize="17pt" />
            <TextView
                android:id="@+id/tvNo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnred_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_red"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="  "/>
            <Button
                android:id="@+id/btnorg_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_yellow"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="  "/>
            <Button
                android:id="@+id/btngrn_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_green"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="  "/>
            <Button
                android:id="@+id/btnvio_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_purple"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="  "/>
            <Button
                android:id="@+id/btngry_7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_gray"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="  "/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="top"
            android:id="@+id/et_7"
            android:hint="지난밤 어떤 꿈을 꾸었나요?"
            android:padding="20dp"
            android:background="#dfddf7"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:lines="8"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <Button
                android:id="@+id/save_7"
                android:layout_margin="10dp"
                android:layout_width="75dp"
                android:layout_height="38dp"
                android:background="@drawable/purple_border"
                android:textColor="@color/colorPrimarypurple"
                android:text="저장" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>